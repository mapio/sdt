cat >/home/vagrant/.inputrc <<-EOF
	# silence!
	set bell-style none

	# be 8 bit clean
	set input-meta on
	set output-meta on
	set convert-meta off

	# Mac OSX filenames
	set completion-ignore-case on

	# misc
	"\e[3~": delete-char
	"\C-h": backward-delete-char
	"\e[6~": history-search-forward
	"\e[5~": history-search-backward

	# python
	Tab: complete
EOF

cat > /home/vagrant/.bash_aliases <<-EOF
	# SDT aliases
	alias l='/bin/ls -Ghl'
EOF

cat >> /home/vagrant/.profile <<-EOF
	# SDT environment
	PIP_DOWNLOAD_CACHE=/home/vagrant/.pip/cache
EOF
